@{
    ViewBag.title = "List of Movies";
}

@model IQueryable<AddMovie>;


<div>
    <h2>List of Submitted Movies</h2>
    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent to</th><th>Notes</th><th>Edit</th><th>Delete</th></tr>
        </thead>

        <tbody>
            @foreach (var x in Model)
            {
                @if (x.Title != "Independence Day")
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.YearReleased</td>
                        <td>@x.DirectorName</td>
                        <td>@x.MovieRating</td>
                        <td>@x.IsEdited</td>
                        <td>@x.IsLentTo</td>
                        <td>@x.Notes</td>

                        <form asp-action="EditMovieInfo" method="post"> <input hidden value="@x.MovieId" name="EditIt" /> <td><button>Edit</button></td></form>
                        <form asp-action="Remove" method="post"> <input hidden value="@x.MovieId" name="RemoveIt" /> <td><button>Delete</button></td></form>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
